<idea-plugin>
    <id>com.github.fornever.intellijdebuggersample</id>
    <name>Debugger Sample</name>
    <vendor>fornever</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.DebuggerBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <xdebugger.breakpointType implementation="me.fornever.lua.debugger.LuaBreakpointType"/>
        <configurationType implementation="me.fornever.lua.debugger.LuaRunConfigurationType"/>
        <runConfigurationProducer implementation="me.fornever.lua.debugger.LuaRunConfigurationProducer"/>
        <programRunner implementation="me.fornever.lua.debugger.LuaDebugProgramRunner"/>
    </extensions>
</idea-plugin>
